<!DOCTYPE html>
<html lang="it">

    <head>

        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="description" content="">
        <meta name="author" content="">

        <title>{% block headtitle %}{% endblock %}</title>

        <!-- Custom fonts for this template-->
        <link href="{{ asset('bundles/app/vendor/fontawesome-free/css/all.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/app/vendor/datatables/dataTables.bootstrap4.min.css') }}" rel="stylesheet" type="text/css">
        <link href="{{ asset('bundles/app/vendor/select2/css/select2.min.css') }}" rel="stylesheet" />
        <link href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-datepicker/1.9.0/css/bootstrap-datepicker.min.css" rel="stylesheet">
        {% block furtherstyles %}{% endblock %}
        <link href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

        <!-- Custom styles for this template-->
        <link href="{{ asset('bundles/app/css/sb-admin-2.min.css') }}" rel="stylesheet">
        <link href="{{ asset('bundles/app/css/sitecss.min.css') }}" rel="stylesheet">

        <style>
            .navbar-gradient {
                background-color: #800020;
                background-image: linear-gradient(180deg, #800020 10%, #900020 100%);
                background-size: cover;
            }
        </style>
        <link rel="shortcut icon" type="image/x-icon" href="{{ asset('favicon.ico') }}">
    </head>

    <body id="page-top">

        <div id="wrapper">

            {% block sidebar %}{% include '@App/includes/sidebar.html.twig' %}{% endblock %}

            <div id="content-wrapper" class="d-flex flex-column">

                <div id="content">

                    {% block topbar %}{{ render(controller('AppBundle:Admin:topbar')) }}{% endblock %}

                    <div class="container-fluid">

                        <div class="d-sm-flex align-items-center justify-content-between mb-4">
                            <h1 class="h3 mb-0 text-gray-800">{% block pagetitle %}{% endblock %}</h1>
                            {% block headeractions %}{% endblock %}
                        </div>

                        {% block pagecontent %}{% endblock %}
                    </div>

                </div>

                <footer class="sticky-footer bg-white">
                    <div class="container my-auto">
                        <div class="copyright text-center my-auto">
                            <span>Copyright &copy; Alessandro Defendenti {{ "now"|date('Y') }}</span>
                        </div>
                    </div>
                </footer>

            </div>

        </div>

    <script src="{{ asset('bundles/app/vendor/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/jquery-easing/jquery.easing.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/datatables/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/datatables/dataTables.bootstrap4.min.js') }}"></script>
    <script src="{{ asset('bundles/app/vendor/select2/js/select2.full.min.js') }}"></script>
