<div class="modal fade" id="insertModal" tabindex="-1" role="dialog" aria-labelledby="insertModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add a new product</h5>
                <button class="close" type="button" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">Ã—</span>
                </button>
            </div>
            <div class="modal-body">
                <form method="POST" action="{{ url('addProduct_url') }}" autocomplete="off" id="insert_form">
                    <div class="row">
                        <div class="col-12">
                            <p id="error" class="d-none" style="color: red;font-weight: bold;">ALL FIELDS ARE MANDATORY!</p>
                        </div>
                        <div class="col-12">
                            <label class="form-control-label" for="basket">Shopping Basket</label>
                            <select style="width: 100%" class="form-control fields" id="basket" name="basket">
                                <option></option>
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-control-label" for="category">Category</label>
                            <select style="width: 100%" class="form-control selects fields" id="category" name="category">
                                <option></option>
                                {% for category in categories %}
                                    <option value="{{ category.getUid }}">{{ category.getDescription }}</option>
                                {% endfor %}
                            </select>
                        </div>
                        <div class="col-12">
                            <label class="form-control-label" for="description">Item Description</label>
                            <input type="text" name="description" id="description" class="form-control fields">
                        </div>
                        <div class="col-12">
                            <label class="form-control-label" for="quantity">Quantity</label>
                            <input type="number" min="0" name="quantity" id="quantity" class="form-control fields">
                        </div>
                        <div class="col-12">
                            <label class="form-control-label" for="shelf_price">Shelf Price</label>
                            <input type="number" min="0" name="shelf_price" id="shelf_price" class="form-control fields">
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button class="btn btn-outline-secondary" type="button" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-outline-success" onclick="addProduct()">Confirm</button>
            </div>
        </div>
    </div>
</div>